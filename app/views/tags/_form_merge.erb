<% form_remote_tag :url=>merge_tags_path,:method=>:post do%>
  <% tag_ids.each do |id| %>
    <%= hidden_field_tag "tag_ids[]",id %>
  <% end %>
  <span><%= t("page.tags.tag") %></span>
  <span>
    <%= Tag.find(tag_ids).map{|tag_temp| tag_temp.value}*","%>
  </span>
  <span><%= t("page.tags.merge_as") %></span>
  <%= text_field_tag :value %>
  <%= submit_tag t('page.form.submit') %>
<% end %>